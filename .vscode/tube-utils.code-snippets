    "prefix": "exp",
    "body": ["export function $1 () {", "return ($2)", "}"]
  },
  "export everything": {
    "scope": "typescript,javascript,javascriptreact,typescriptreact",
    "prefix": "exev",
    "body": ["export * from './$1'"]
  },
  "Write calculated font size": {
    "scope": "css",
    "prefix": "fnz",
